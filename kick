--// 100% Working Kick Button (Auto-Exec Safe, retry system)

task.spawn(function()
    repeat task.wait() until game:IsLoaded()

    local player = game.Players.LocalPlayer

    -- Safe parent function (CoreGui first, fallback to PlayerGui)
    local function safeParent()
        local ok, gui = pcall(function()
            local g = Instance.new("ScreenGui")
            g.Parent = game:GetService("CoreGui")
            return g
        end)
        if ok then return gui end
        
        -- fallback
        return Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
    end

    -- Create GUI (retry up to 10 times)
    local gui
    for i = 1, 10 do
        gui = safeParent()
        if gui then break end
        task.wait(0.2)
    end

    if not gui then return end -- Should never happen but safety
    gui.ResetOnSpawn = false

    -- Outer draggable border
    local border = Instance.new("Frame", gui)
    border.Size = UDim2.new(0, 180, 0, 60)
    border.Position = UDim2.new(1, -220, 1, -140) -- Bottom-right but a bit left
    border.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
    border.BorderSizePixel = 4
    border.Active = true
    border.Draggable = true

    Instance.new("UICorner", border).CornerRadius = UDim.new(0, 12)

    -- Inner red button
    local kickBtn = Instance.new("TextButton", border)
    kickBtn.Size = UDim2.new(1, -10, 1, -10)
    kickBtn.Position = UDim2.new(0, 5, 0, 5)
    kickBtn.BackgroundColor3 = Color3.fromRGB(255, 40, 40)
    kickBtn.Text = "KICK"
    kickBtn.Font = Enum.Font.GothamBold
    kickBtn.TextScaled = true
    kickBtn.TextColor3 = Color3.new(1,1,1)
    Instance.new("UICorner", kickBtn).CornerRadius = UDim.new(0, 10)

    -- Kick on click
    kickBtn.MouseButton1Click:Connect(function()
        player:Kick("You kicked yourself.")
    end)
end)
